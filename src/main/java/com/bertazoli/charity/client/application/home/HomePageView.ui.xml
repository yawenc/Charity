<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:f="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container">
    <ui:with type="com.bertazoli.charity.client.place.NameTokens" field="nameTokens"></ui:with>
    <g:HTMLPanel>
        <!-- 
        <g:Hyperlink targetHistoryToken="{nameTokens.getUserSettings}">User Settings</g:Hyperlink>
        <g:Hyperlink targetHistoryToken="{nameTokens.getRegisterCharity}">Register Charity</g:Hyperlink>
        -->
        <g:HTMLPanel>
            <f:FieldLabel>
                <ui:msg description="searchForCharity">Search for charity</ui:msg>
                <f:widget>
                    <f:TextField ui:field="charityName" />
                </f:widget>
            </f:FieldLabel>
            <ui:msg description="charitiesAvailable">Charities available</ui:msg>
            <container:FlowLayoutContainer ui:field="charityList" />
            <ui:msg description="charitiesThatHaveBeenSelected">Charities that have been selected</ui:msg>
            <container:FlowLayoutContainer ui:field="selectedCharities" />
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>

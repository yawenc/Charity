<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <container:CenterLayoutContainer>
        <g:HTMLPanel>
            <g:InlineLabel><ui:msg description="username">Username</ui:msg></g:InlineLabel><g:TextBox ui:field="username" />
            <g:InlineLabel><ui:msg description="password">Password</ui:msg></g:InlineLabel><g:PasswordTextBox ui:field="password" />
            <g:Button ui:field="submit"><ui:msg description="submit">Submit</ui:msg></g:Button>
        </g:HTMLPanel>
    </container:CenterLayoutContainer>
</ui:UiBinder>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container">

    <!-- http://docs.sencha.com/gxt-guides/3 - GXT guides -->
    <!-- http://docs.sencha.com/gxt-guides/3/ui/layout/LayoutContainers.html - About layout containers -->
    <ui:style>
        .widget {
            margin-top: 25px;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:SimplePanel ui:field="header" />
        <container:Viewport styleName="{style.widget}" ui:field="main"/>
        <g:SimplePanel ui:field="footer" />
    </g:HTMLPanel>
</ui:UiBinder>
